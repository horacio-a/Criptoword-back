<a href="/admin/novedades/" type="submit" class="btn btn-primary"> atras</a>

<form action="/admin/novedades/editar" enctype="multipart/form-data" method="post" style="height: 100%;"
    class="d-flex align-items-center">
    <div class="container text-center text-black ">
        <div class="saludo">
            modificar el nft
        </div>
        <input type="hidden" name="id" value="{{NFT.id}}">
        <div class="row mb-3 d-flex justify-content-center ">
            <label class="col-12 col-form-label">Nombre del NFT</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="nombre" value="{{NFT.nombre}}">
                <p></p>
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Precio</label>
            <div class="col-12 w-25 ">
                <input type="number" step="0.000000001" class="form-control" name="precio" value="{{NFT.precio}}">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Moneda</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="moneda" value="{{NFT.Moneda}}">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Coleccion</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="coleccion" value="{{NFT.coleccion}}">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">imagen</label>
            <div class="col-12 w-25 ">
                <input type="file" class="form-control" name="imagen" id="imagen">

            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label"> <input type="checkbox" name="img_delete" id="img_delete" value="1"> Desea eliminar la imagen? </label>
            <div class="col-12 w-25 ">
                
                <input type="hidden" name="img_original" value="{{NFT.img_id}}"> 
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Propietario en caso de tener</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="propietario" value="{{NFT.propietario}}">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>

        {{#if error}}
        <p>{{message}}</p>
        {{/if}}

    </div>



</form>
