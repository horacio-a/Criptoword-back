<form action="/admin/login" method="post" style="height: 100%;" class="d-flex align-items-center">
    <div class="container text-center text-black ">

  <div class="row mb-3 d-flex justify-content-center ">

    <label for="inputEmail3" class="col-12 col-form-label">Usuario</label>


    <div class="col-12 w-25 ">
      <input type="text" class="form-control" id="inputEmail3" name="usuario">
    </div>
  </div>
  <div class="row mb-3 justify-content-center">

    <label for="inputPassword3" class="col-12 col-form-label">Contrseña</label>

    <div class="col-12 w-25 ">
      <input type="password" class="form-control" id="inputPassword3" name="password">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Sign in</button>


  {{#if error }}
  <p>El usuario y/o Contrseña son Incorrectos</p>
  {{/if}}
      </div>

</form>