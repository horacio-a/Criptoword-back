<div class="d-flex justify-content-end mb-3 ">
 
    <div> 
        <a type="button" class="btn btn-danger" href="/admin/login/logout"> Cerrar sesion</a>
        <a type="button" class="btn btn-success" href="/admin/login/agregar">Nuevo usuario</a>
    </div>

</div>
<div class="d-flex justify-content-between ">
    <div class="saludo">Lista de Mineros</div>
    <div class="btn-group" role="group" aria-label="Basic example">
        <a href="/admin/novedades" type="button" class="btn btn-primary">NFT</a>
        <a href="/admin/mineria" type="button" class="btn btn-primary">Mineria</a>
    </div>

    <a href="/admin/mineria/agregar" type="button" class="btn btn-success">Nuevo minero</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Potencia</th>
            <th scope="col"></th>
            <th scope="col">imagen</th>
            <th scope="col">tipo</th>
            <th scope="col">ganancias</th>
            <th scope="col">consumo</th>




            <th scope="col" class="text-end">Aciones</th>

        </tr>
    </thead>
    <tbody>
        {{#each mineria}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{potencia}}</td>
            <td>{{unidadpotencia}}</td>
            <td>{{{img_id}}}</td>
            <td>{{tipo}}</td>
            <td>{{ganancia}}</td>
            <td>{{consumo}}</td>




            <td class="text-end">
                <a href="/admin/mineria/eliminar/{{id}}" type="button" class="btn btn-danger">Eliminar</a>
                <a href="/admin/mineria/editar/{{id}}" type="button" class="btn btn-warning"> editar</a>

                {{/each}}

            </td>
        </tr>

    </tbody>
</table>

<nav aria-label="Page navigation example" class="d-flex justify-content-center">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/admin/mineria">1</a></li>
        <li class="page-item"><a class="page-link" href="/admin/mineria/2">2</a></li>
        <li class="page-item"><a class="page-link" href="/admin/mineria/3">3</a></li>
    </ul>
</nav>
