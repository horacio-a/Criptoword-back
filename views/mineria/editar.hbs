<form action="/admin/mineria/editar" enctype="multipart/form-data" method="post" style="height: 100%;"
    class="d-flex align-items-center">
    <div class="container text-center text-black ">
        <div class="saludo">
            modificar el minero
        </div>
        <input type="hidden" name="id" value="{{mineria.id}}">
        <div class="row mb-3 d-flex justify-content-center ">
            <label class="col-12 col-form-label">Nombre</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="nombre" value="{{mineria.nombre}}">
                <p></p>
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Precio</label>
            <div class="col-12 w-25 ">
                <input type="number" step="0.000000001" class="form-control" name="precio" value="{{mineria.precio}}">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">potencia</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="potencia" value="{{mineria.potencia}}">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Unidad</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="unidadpotencia" value="{{mineria.unidadpotencia}}">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">imagen</label>
            <div class="col-12 w-25 ">
                <input type="file" class="form-control" name="imagen" id="imagen">

            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label"> <input type="checkbox" name="img_delete" id="img_delete" value="1">
                Desea eliminar la imagen? </label>
            <div class="col-12 w-25 ">

                <input type="hidden" name="img_original" value="{{mineria.img_id}}">
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Tipo</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="tipo" value="{{mineria.tipo}}">
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">ganancias</label>
            <div class="col-12 w-25 ">
                <input type="number" step="0.000000001" class="form-control" name="ganancia" value="{{mineria.ganancia}}">
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <label class="col-12 col-form-label">Consumo</label>
            <div class="col-12 w-25 ">
                <input type="text" class="form-control" name="consumo" value="{{mineria.consumo}}">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>

        {{#if error}}
        <p>{{message}}</p>
        {{/if}}

    </div>



</form>